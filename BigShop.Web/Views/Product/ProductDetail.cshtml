@using BigShop.Web.Models
@model ProductViewModel

@{
    var category = ViewBag.Category as ProductViewModel;
    ViewBag.Title = "BigShop.com - " + Model.Name;
    ViewBag.MetaKeyword = category.MetaKeyword;
    ViewBag.MetaDescription = category.MetaDescription;
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="container">
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active">Sản phẩm</li>
        <li class="active">@Model.Name</li>
    </ol>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin chi tiết</h4>
            </div>
            <div class="modal-body">
                <p>@Html.Raw(Model.Profile)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="single contact">
    <div class="container">
        <div class="single-main">
            <div class="row">
                <div class="col-md-9 single-main-left" style="background: white; padding: 20px;">
                    <div class="sngl-top">
                        <div class="col-md-5 single-top-left">
                            <div class="flexslider">
                                <ul class="slides">
                                    @{
                                        var moreImages = (List<string>)ViewBag.MoreImages;
                                    }
                                    @if (moreImages.Count > 0)
                                    {
                                        foreach (var item in moreImages)
                                        {
                                            <li data-thumb="@item">
                                                <div class="thumb-image"> <img src="@item" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                            <!-- FlexSlider -->
                            <script src="~/Assets/Client/js/imagezoom.js"></script>
                            <script defer src="~/Assets/Client/js/jquery.flexslider.js"></script>
                            <link rel="stylesheet" href="~/Assets/Client/css/flexslider.css" type="text/css" media="screen" />

                            <script>
                                // Can also be used with $(document).ready()
                                $(window).load(function () {
                                    $('.flexslider').flexslider({
                                        animation: "slide",
                                        controlNav: "thumbnails"
                                    });
                                });
                            </script>
                        </div>
                        <div class="col-md-7 single-top-right" style="background: white; padding: 5px">
                            <div class="single-para simpleCart_shelfItem">
                                <h2>@Model.Name</h2>
                                <div class="star-on">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <ul class="star-footer">
                                                <li><a href="#"><i> </i></a></li>
                                                <li><a href="#"><i> </i></a></li>
                                                <li><a href="#"><i> </i></a></li>
                                                <li><a href="#"><i> </i></a></li>
                                                <li><a href="#"><i> </i></a></li>
                                            </ul>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="review">
                                                @if (Model.ViewCount != null)
                                                {
                                                    <h6 href="#">@Model.ViewCount Lượt xem </h6>
                                                }

                                                <h6>  <span>@Model.Quantity Sản phẩm</span></h6>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal">Xem cấu hình chi tiết</button>
                                            <div class="clearfix"> </div>
                                        </div>
                                    </div>
                                </div>

                                <h5 class="item_price">
                                    @Model.Price.ToString("#,##") VNĐ
                                    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
                                    <g:plusone size="medium"></g:plusone>
                                </h5>
                                <div class="promotionInfomation" style="border-style: dotted;">
                                    <div style="margin-left: 20px;">
                                        <p style="font-size: 24px; color: red;">Khuyến mãi đặc biệt</p>
                                        <ul>
                                            @foreach (var item in ViewBag.Sale)
                                            {
                                                <span>@Html.Raw(item.Description)</span>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <button style="margin-top: 15px;" class="btnAddToCart btn btn-info" data-id="@Model.ID">THÊM VÀO GIỎ HÀNG</button>

                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <hr />
                    <div class="details">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-9">
                                    <ul class="nav nav-tabs" style="width: 820px">
                                        <li class="active"><a data-toggle="tab" href="#home">CẤU HÌNH</a></li>
                                        <li><a data-toggle="tab" href="#menu1">CHI TIẾT SẢN PHẨM</a></li>
                                        <li><a data-toggle="tab" href="#menu2">ĐÁNH GIÁ</a></li>
                                        <li><a data-toggle="tab" href="#menu3">SO SÁNH SẢN PHẨM</a></li>
                                    </ul>

                                    <div class="tab-content">
                                        <div id="home" class="tab-pane fade in active" style="background: white">
                                            <div class="profileProduct">
                                                <div class="container">
                                                    @Html.Raw(Model.Profile)
                                                </div>

                                            </div>
                                        </div>
                                        <div id="menu1" class="tab-pane fade" style="background: white">
                                            <div class="container">
                                                <div class="productContent" style="width: 820px">
                                                    <style>
                                                        .productContent img {
                                                            width: 820px !important;
                                                        }
                                                    </style>
                                                    @Html.Raw(Model.Content)
                                                </div>
                                            </div>
                                        </div>
                                        <div id="menu2" class="tab-pane fade" style="background: white">
                                            <div class="container">
                                                <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                                            </div>
                                        </div>
                                        <div id="menu3" class="tab-pane fade" style="background: white">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="search-bar">
                                                        <form method="GET" role="form">
                                                            <input type="text" placeholder="Nhập tên sản phẩm" name="search" id="txtName1">
                                                            <input type="submit" value="">
                                                        </form>
                                                    </div>
                                                    <hr />
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="search-bar">
                                                        <form method="GET" role="form">
                                                            <input type="text" placeholder="Nhập tên sản phẩm" name="search" id="txtName2">
                                                            <input type="submit" value="">
                                                        </form>
                                                    </div>
                                                    <hr />

                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="row">
                                                <div class="col-md-6" id="compareproduct1">
                                                    @{
                                                        Html.RenderAction("CompareProduct1", Model);
                                                    }
                                                </div>
                                                <div class="col-md-6" id="compareproduct2">
                                                    @{
                                                        Html.RenderAction("CompareProduct2", Model);
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    @{
                                        var equivalentProducts = (IEnumerable<ProductViewModel>)ViewBag.EquivalentProducts;
                                    }
                                    @if (equivalentProducts.Count() > 0)
                                    {
                                        <h4 class="font-italic text-center">SẢN PHẨM TƯƠNG ĐƯƠNG</h4>
                                        foreach (var item in equivalentProducts)
                                        {
                                            var url = "/san-pham/" + item.ProductCategory.Alias + "/" + item.Alias + "/" + item.ID;
                                            <div class="col-md-12 product-left">
                                                <div class="product-main simpleCart_shelfItem">
                                                    <a href="@url" class="mask"><img class="img-responsive zoom-img" src="@item.Image" alt=""></a>
                                                    <div class="product-bottom">
                                                        <h3 class="text-center">@item.Name</h3>
                                                        <h4 class="text-center"><a class="item_add btnAddToCart" href="#" data-id="@item.ID"><i></i></a> <span class="item_price">@item.Price.ToString("#, ##") VNĐ</span></h4>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>

                        </div>
                    </div>

                    <hr />
                    <div class="relatedProduct">
                        <h3>SẢN PHẨM LIÊN QUAN</h3>
                        <div class="latestproducts">
                            <div class="product-one">
                                @foreach (var item in ViewBag.RelatedProducts)
                                {
                                    var url = "/san-pham/" + item.ProductCategory.Alias + "/" + item.Alias + "/" + item.ID;
                                    <div class="col-md-4 product-left p-left">
                                        <div class="product-main simpleCart_shelfItem">
                                            <a href="@url" class="mask"><img class="img-responsive zoom-img" src="@item.Image" alt="" /></a>
                                            <div class="product-bottom">
                                                <h3 class="text-center">@item.Name</h3>
                                                <h4 class="text-center"><a class="item_add btnAddToCart" href="#" data-id="@item.ID"><i></i></a> <span class="item_price">@item.Price.ToString("#, ##") VNĐ</span></h4>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-info">
                        <div class="panel-heading"> <h5 class="text-center">BigShop cam kết</h5></div>
                        <div class="panel-body">
                            <ul>
                                @foreach (var item in ViewBag.Policy)
                                {
                                    <span>@Html.Raw(item.Description)</span>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading"> <h5 class="text-center">BigShop hỗ trợ thanh toán</h5></div>
                        <div class="panel-body">

                            <img src="~/Assets/Client/images/bank.PNG" class="img-responsive" />
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>
</div>

